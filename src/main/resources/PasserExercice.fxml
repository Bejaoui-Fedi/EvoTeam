<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.PasserExerciceController"
      alignment="CENTER"
      stylesheets="@styles.css">

    <VBox styleClass="form-container" spacing="20" style="-fx-max-width: 700;">
        <Label text="Passer un exercice" styleClass="form-header"/>
        
        <VBox spacing="10" style="-fx-background-color: -color-bg-green; -fx-padding: 15; -fx-background-radius: 10;">
            <Label fx:id="lblTitle" text="Titre de l'exercice" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: -color-primary-green;"/>
            
            <HBox spacing="20">
                <Label fx:id="lblType" text="Type: -" styleClass="text-body"/>
                <Label fx:id="lblDifficulty" text="Difficulté: -" styleClass="text-body"/>
                <Label fx:id="lblDuration" text="Durée: -" styleClass="text-body"/>
            </HBox>
        </VBox>

        <Label text="Description / Instructions:" styleClass="form-label"/>
        <TextArea fx:id="taDescription" editable="false" wrapText="true" prefRowCount="6" 
                  style="-fx-background-color: transparent;"/>

        <HBox alignment="CENTER_LEFT">
             <Hyperlink fx:id="linkMedia" text="▶ Ouvrir le média associé" 
                        style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: -color-primary-blue;"/>
        </HBox>

        <Separator/>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="btnBack" text="Retour" styleClass="button"/>
            <Button fx:id="btnFinish" text="Terminer l'exercice" defaultButton="true" styleClass="button, btn-primary"/>
        </HBox>
    </VBox>

</VBox>