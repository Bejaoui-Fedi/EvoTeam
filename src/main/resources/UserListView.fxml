<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.UserListController">

    <!-- Header -->
    <top>
        <VBox styleClass="header" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
            <Label text="Gestion des Utilisateurs" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Search and Filter Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Rechercher par nom ou email..."
                          prefWidth="300" style="-fx-font-size: 14;"/>
                <Button text="Rechercher" onAction="#handleSearch"
                       style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Nouvel Utilisateur" onAction="#handleAddUser"
                       style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;"/>
                <Button text="↻ Actualiser" onAction="#handleRefresh"
                       style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 14;"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="userTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 13;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="roleColumn" text="Rôle" prefWidth="120"/>
                    <TableColumn fx:id="telephoneColumn" text="Téléphone" prefWidth="130"/>
                    <TableColumn fx:id="actifColumn" text="Actif" prefWidth="80"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Stats Bar -->
            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #ECF0F1; -fx-background-radius: 5;">
                <Label fx:id="totalUsersLabel" text="Total: 0 utilisateurs" style="-fx-font-weight: bold;"/>
                <Label fx:id="activeUsersLabel" text="Actifs: 0" style="-fx-text-fill: #27AE60;"/>
                <Label fx:id="inactiveUsersLabel" text="Inactifs: 0" style="-fx-text-fill: #E74C3C;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
