<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.admin.AdminSupervisionRdvController"
      spacing="20" style="-fx-background-color: white; -fx-padding: 30;">

    <Label text="SUPERVISION DES RENDEZ-VOUS - ADMIN" style="-fx-text-fill: #2c3e50;">
        <font>
            <Font size="28" name="System Bold"/>
        </font>
    </Label>

    <Separator/>

    <Label fx:id="totalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Label fx:id="statsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>

    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="ðŸ” Recherche :" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="searchField" promptText="ID, motif, statut, patient..." prefWidth="250"/>

        <Label text="ðŸ“… Date :" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <DatePicker fx:id="dateFilterPicker" prefWidth="150"/>

        <Label text="ðŸ“Š Statut :" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
