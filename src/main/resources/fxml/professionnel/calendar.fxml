                    <Label text="SAMEDI" style="-fx-font-weight: bold; -fx-pref-width: 155; -fx-alignment: center; -fx-text-fill: #7f8c8d; -fx-font-size: 11;"/>
                </HBox>
                
                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
